<h1>新しい習慣を追加</h1>

<%= form_with model: Habit.new, url: habits_path, local: true do |form| %>
  <div class="field">
    <%= form.label :name, "習慣の名前" %><br>
    <%= form.select :name, options_for_select(['食生活', '読書', '瞑想', '早起き']), include_blank: "選択してください" %>
  </div>

  <div class="actions">
    <%= form.submit "追加する" %>
  </div>
<% end %>